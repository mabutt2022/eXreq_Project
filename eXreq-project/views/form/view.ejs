<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script
      src="https://code.jquery.com/jquery-3.2.1.min.js"
      integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous"
    ></script>
    <script defer src="/javascripts/expFunc.js"></script>
    <title>Expense Form</title>
  </head>
  <body>

    <%- include('../partials/header') %>
    <br><br>
    <form action="???" method="">
        <input type="hidden" name="userId" value="<%= user %>">
      <label>Name</label><br />
      <input type="text" name="name"  value="<%= forms.name %>" readonly/>
      <br /><br />
      <label>Department</label><br />
      <input type="text" name="department" value="<%= forms.department %>" readonly/>
      <br /><br />
      <label>Category</label><br />
      <select name="category" value="<%= forms.category %>" readonly>
        <option value="RFC">RFC</option>
      </select>
      <br /><br />
      <label>Criteria</label><br />
      <input
        type="radio"
        name="serviceYear"
        id="oneYear"
        checked
        value="<%= forms.serviceYear %>" readonly        
      />
      <label for="oneYear"><%= forms.serviceYear %></label><br />
      <br /><br />
      <label>Document Name</label><br />
      <input type="text" name="documentName" value="<%= forms.documentName %>" readonly/>
      <br /><br />
      <label>Request Date</label><br />
      <input type="text" name="requestDate" value="<%= forms.requestDate.toLocaleString() %>" readonly/>
      <br /><br />
      <label>Is this a Client Project</label><br />
      <select name="clientProject" >
        <option value="<%= forms.clientProject %>" readonly><%= forms.clientProject %></option>
      </select>
      <br /><br />
      <label>Project Explanation</label><br />
      <input type="text" name="projectInfo" value="<%= forms.projectInfo %>" readonly/>
      <br /><br />
      <label>Procurement Items</label><br />
      <div id="addTable">
        <table id="table">
            <thead>
                <th>Item Number</th>
                <th>Description</th>
                <th>Currency</th>
                <th>Cost</th>
              </thead>
              <tbody>
                <tr>
                  <% item.item.forEach(el => { %>
                  <td><%= el.itemNum %></td>
                  <td><%= el.description %></td>
                  <td><%= el.currency %></td>
                  <td><%= el.cost %></td>
                </tr>
              <% }) %>
              </tbody>
        </table>
      </div>
      <br /><br />
      <label>Purpose</label><br />
      <input type="text" name="purpose" value="<%= forms.purpose %>" readonly>
      <br /><br />
    </form>
  </body>
</html>
