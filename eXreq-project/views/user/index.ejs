    <%- include('../partials/header') %>
    <div class="center">
      <a href="/form/adduser/alluser/<%= user %>"><button class="btn btn-outline-secondary">All Users</button></a>
    <form action="/adduser/<%= user %>" method="POST">        
        <br><br>
        <label>Name</label><br>
        <input type="text" name="name">
        <br><br>
        <label>Email</label><br>
